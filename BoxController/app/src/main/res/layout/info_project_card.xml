<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@drawable/info_card_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_project"
            android:text="@string/project"
            android:textSize="@dimen/normal_text_size"
            android:paddingStart="25dp"
            android:paddingLeft="25dp"
            android:paddingVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/info_card_top_background"
            android:textColor="@color/card_title_color"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/txt_project"
            android:text="@string/app_name"
            android:textSize="@dimen/big_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:paddingVertical="6dp"
            android:textColor="@color/colorAccent"
            android:background="@drawable/info_card_bottom_background"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_project"
            app:layout_constraintHorizontal_bias="0"
            android:paddingLeft="40dp"
            android:paddingStart="40dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>